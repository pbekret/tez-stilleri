    <id>http://www.zotero.org/styles/balikesir-sbe-2019</id>
    <link href="http://www.zotero.org/styles/balikesir-sbe-2019" rel="self"/>
    <author>
      <name>ChatGPT CSL Generator</name>
    </author>
    <category citation-format="author-date"/>
    <updated>2025-07-19T12:00:00+00:00</updated>
    <summary>Balıkesir Üniversitesi Sosyal Bilimler Enstitüsü 2019 tez yazım kılavuzuna uygun atıf stili.</summary>
    <language>tr-TR</language>
  </info>
  <locale xml:lang="tr">
    <terms>
      <term name="et-al">vd.</term>
      <term name="and">ve</term>
      <term name="page" form="short">s.</term>
      <term name="retrieved">Erişim:</term>
    </terms>
  </locale>
  <macro name="author">
    <names variable="author">
      <name name-as-sort-order="first" and="text" delimiter=", "/>
      <label form="short" prefix=" " text-case="lowercase" suffix="."/>
    </names>
  </macro>
  <macro name="year">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>
  <macro name="citation">
    <group delimiter=", ">
      <text macro="author"/>
      <text macro="year"/>
      <text variable="page" prefix="s. "/>
    </group>
  </macro>
  <macro name="title">
    <text variable="title" font-style="italic"/>
  </macro>
  <macro name="container-title">
    <text variable="container-title" font-style="italic"/>
  </macro>
  <macro name="publisher">
    <group delimiter=": ">
      <text variable="publisher-place"/>
      <text variable="publisher"/>
    </group>
  </macro>
  <citation>
    <layout prefix="(" suffix=")" delimiter="; ">
      <text macro="citation"/>
    </layout>
  </citation>
  <bibliography hanging-indent="true" line-spacing="1">
    <layout>
      <text macro="author" suffix=". "/>
      <text macro="year" prefix="(" suffix="). "/>
      <text macro="title" suffix=". "/>
      <group delimiter=". ">
        <text macro="container-title"/>
        <text variable="volume" font-weight="bold"/>
        <text variable="issue" prefix="(" suffix=")"/>
      </group>
      <text variable="page" prefix=", s. " suffix="."/>
      <text macro="publisher" prefix=" " suffix="."/>
    </layout>
  </bibliography>
</style>
